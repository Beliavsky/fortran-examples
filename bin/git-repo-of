#!/usr/bin/env bash

trap "exit 1" HUP INT QUIT TERM

set -e -u -o pipefail

CMD="$(basename $0)"
CMD_DIR="$(dirname $0)"
function usage {
    (echo "Usage: $CMD [-hnv] file"
     echo "-h        Print this help message."
     echo "-n        Dry run. Don't execute commands."
     echo "-v        Verbose. Print extra information if appropriate."
     echo "Get the URL of the git repo corresponding to a project.") 1>&2
}

DRY_RUN=
VFLAG=
while getopts hnv OPTCHAR; do
    case $OPTCHAR in
        h)  usage; exit 0;;
        n)  DRY_RUN=1;;
        v)  VFLAG=1;;
    esac
done

shift $(($OPTIND - 1))

case $# in
    1)  P="$1";;
    *)  usage; exit 1;;
esac

REMOTE="$(builtin cd "$P" && git remote -v)"
URL=$(echo "$REMOTE" \
          | sed -e $'s/^[^\t]*[ \t]//' \
                -e 's/\.git//' \
                -e 's/github.com:/github.com\//g' \
                -e 's/gitlab.com:/gitlab.com\//g' \
                -e 's/[^/]*@//' \
                -e 's/ssh:/https:/' \
                -n -e 's/ [(]fetch[)]//p')
echo $URL
